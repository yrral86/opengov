<h3>It's a map!</h3>
<b>Locations:</b><br />
<%= ul map.locations do |l|
    "Title: #{l.title}, Latitude: #{l.latitude}, Longitude: #{l.longitude} " +
    object_details_link(l)
end %>
<%= javascript 'http://maps.google.com/maps/api/js?sensor=false&v=3.2' %>
<%= javascript 'google_map' %>

<div style="float: left">
  <div id="map" style="width: 500px; height: 400px">
    <%= run_js "google_map.init();
		#{load_locations}" %>
  </div>
  <form id="add_address" action="javascript:alert('TODO: send to server, have server update locations list');">
    Address: <input type="text" name="address" /> <input type="submit" value="Add">
  </form>
</div>
<div style="float: right" id="locations">
</div>
<%= run_js "poll_to_div('locations', '/map/locations');" %>
